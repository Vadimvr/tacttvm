<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:tacttvm.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
		MaxWidth="300" MaxHeight="300"
        x:Class="tacttvm.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="tacttvm">
	<Window.Styles>
		<StyleInclude Source="/Styles/Button.xaml"/>
	</Window.Styles>

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	<StackPanel>
		<Label Classes="FieldReview">Сочетание клавиш:</Label>
		<TextBox Classes="KeyCombination" Text="{Binding KeyCombination}"></TextBox>
	</StackPanel>
</Window>
